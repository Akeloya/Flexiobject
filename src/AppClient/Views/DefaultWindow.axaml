<Window
    x:Class="FlexiObject.AppClient.Views.DefaultWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="using:FlexiObject.AppClient.Properties"
    Name="MainWnd"
    Title="{x:Static res:Resources.AppTitle}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Icon="/Assets/Appicon.ico"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <ia:DataTriggerBehavior
            Binding="{Binding CloseWindow}"
            ComparisonCondition="Equal"
            Value="True">
            <ia:CallMethodAction MethodName="Close" TargetObject="{Binding #MainWnd}" />
        </ia:DataTriggerBehavior>
    </i:Interaction.Behaviors>
</Window>
