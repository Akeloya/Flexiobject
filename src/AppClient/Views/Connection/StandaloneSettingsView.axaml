<UserControl
    x:Class="FlexiObject.AppClient.Views.Connection.StandaloneSettingsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UniformGrid Columns="2">
        <TextBlock Text="Connection Name" />
        <TextBox Text="{Binding Name}" />

        <TextBlock Text="Server type" />
        <ComboBox Items="{Binding DatabaseTypes}" SelectedItem="{Binding DbType}" />

        <TextBlock Text="Server name" />
        <TextBox Text="{Binding ServerName}" />

        <TextBlock Text="Database Name" />
        <TextBox Text="{Binding DatabaseName}" />

        <TextBlock Text="User name" />
        <TextBox Text="{Binding UserName}" />

        <TextBlock Text="Password" />
        <TextBox Text="{Binding UserPassword}" />
    </UniformGrid>
</UserControl>
